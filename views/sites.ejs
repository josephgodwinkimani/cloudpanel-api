<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Lists - CloudPanel API</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans">
    <div class="max-w-7xl mx-auto p-6">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Navigation Header -->
            <nav class="bg-white border-b border-gray-200 shadow-sm">
                <div class="px-4 lg:px-8 py-4">
                    <div class="flex justify-between items-center">
                        <!-- Logo/Brand -->
                        <div class="flex items-center space-x-2 lg:space-x-4">
                            <div class="text-xl lg:text-2xl font-bold text-blue-600">CloudPanel</div>
                            <span class="text-gray-400 hidden sm:inline">|</span>
                            <span class="text-gray-600 font-medium hidden sm:inline">API Management</span>
                        </div>
                        
                        <!-- Navigation Menu -->
                        <div class="flex items-center space-x-2 lg:space-x-6">
                            <a href="/docs" class="flex items-center px-2 lg:px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-lg font-medium transition-all duration-200 text-sm lg:text-base">
                                <svg class="w-4 h-4 lg:w-5 lg:h-5 mr-1 lg:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span class="hidden sm:inline">Docs</span>
                            </a>
                            <a href="/sites" class="flex items-center px-2 lg:px-4 py-2 text-blue-600 bg-blue-50 rounded-lg font-medium transition-all duration-200 hover:bg-blue-100 text-sm lg:text-base">
                                <svg class="w-4 h-4 lg:w-5 lg:h-5 mr-1 lg:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                                </svg>
                                <span class="hidden sm:inline">Site Lists</span>
                            </a>
                            <a href="/logs" class="flex items-center px-2 lg:px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-lg font-medium transition-all duration-200 text-sm lg:text-base">
                                <svg class="w-4 h-4 lg:w-5 lg:h-5 mr-1 lg:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span class="hidden sm:inline">Logs</span>
                            </a>
                            
                            <!-- User Menu -->
                            <div class="relative group">
                                <button class="flex items-center px-2 lg:px-4 py-2 text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-lg font-medium transition-all duration-200 text-sm lg:text-base">
                                    <svg class="w-4 h-4 lg:w-5 lg:h-5 mr-1 lg:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <span class="hidden sm:inline">Account</span>
                                    <svg class="w-3 h-3 lg:w-4 lg:h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                    </svg>
                                </button>
                                
                                <!-- Dropdown Menu -->
                                <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                                    <div class="py-2">
                                        <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors duration-200 text-sm">
                                            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            Profile
                                        </a>
                                        <a href="/settings" class="block px-4 py-2 text-gray-700 hover:bg-gray-50 hover:text-blue-600 transition-colors duration-200 text-sm">
                                            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            </svg>
                                            Settings
                                        </a>
                                        <hr class="my-2 border-gray-200">
                                        <a href="/auth/logout" class="block px-4 py-2 text-red-600 hover:bg-red-50 transition-colors duration-200 text-sm">
                                            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                            </svg>
                                            Logout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
            
            <!-- Header -->
            <div class="relative bg-gradient-to-r from-blue-600 to-purple-600 text-white p-4 lg:p-8 text-center">
                <h1 class="text-2xl lg:text-3xl font-bold mb-2">Site Lists</h1>
                <p class="text-blue-100 text-sm lg:text-base">Manage all your hosted websites and domains</p>
            </div>
            
            <div class="p-4 lg:p-8">
                <!-- Search and Filter Bar -->
                <div class="mb-8">
                    <div class="space-y-4">
                        <!-- Search Input -->
                        <div class="relative w-full">
                            <input 
                                type="text" 
                                id="search-input" 
                                placeholder="Search domains..." 
                                class="w-full px-4 py-3 pl-12 pr-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                onkeyup="filterSites()"
                            >
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                </svg>
                            </div>
                        </div>
                        
                        <!-- Filters -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
                            <select id="type-filter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" onchange="filterSites()">
                                <option value="">All Types</option>
                                <option value="PHP">PHP</option>
                                <option value="CMS">CMS</option>
                                <option value="Node.js">Node.js</option>
                                <option value="JavaScript">JavaScript</option>
                                <option value="React">React</option>
                                <option value="Vue.js">Vue.js</option>
                                <option value="Python">Python</option>
                                <option value="Ruby">Ruby</option>
                                <option value="Go">Go</option>
                                <option value="Rust">Rust</option>
                                <option value="Static">Static</option>
                            </select>
                            
                            <select id="framework-filter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" onchange="filterSites()">
                                <option value="">All Frameworks</option>
                                <option value="Laravel">Laravel</option>
                                <option value="WordPress">WordPress</option>
                                <option value="Symfony">Symfony</option>
                                <option value="CodeIgniter">CodeIgniter</option>
                                <option value="Express">Express</option>
                                <option value="Next.js">Next.js</option>
                                <option value="React">React</option>
                                <option value="Vue.js">Vue.js</option>
                                <option value="Django">Django</option>
                                <option value="Flask">Flask</option>
                            </select>
                            
                            <select id="ssl-filter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" onchange="filterSites()">
                                <option value="">All SSL Status</option>
                                <option value="true">SSL Enabled</option>
                                <option value="false">No SSL</option>
                            </select>
                            
                            <button onclick="refreshSites()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors duration-200 flex items-center justify-center text-sm">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                                </svg>
                                <span class="hidden sm:inline">Refresh</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-8">
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 lg:p-6">
                        <div class="flex items-center">
                            <div class="p-2 lg:p-3 bg-blue-500 rounded-lg">
                                <svg class="w-4 h-4 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                                </svg>
                            </div>
                            <div class="ml-3 lg:ml-4">
                                <h3 class="text-xs lg:text-sm font-medium text-gray-500">Total Sites</h3>
                                <p class="text-lg lg:text-2xl font-semibold text-gray-900" id="total-sites"><%= sites.length %></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4 lg:p-6">
                        <div class="flex items-center">
                            <div class="p-2 lg:p-3 bg-green-500 rounded-lg">
                                <svg class="w-4 h-4 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                            </div>
                            <div class="ml-3 lg:ml-4">
                                <h3 class="text-xs lg:text-sm font-medium text-gray-500">SSL Enabled</h3>
                                <p class="text-lg lg:text-2xl font-semibold text-gray-900" id="ssl-enabled"><%= sites.filter(site => site.ssl).length %></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4 lg:p-6">
                        <div class="flex items-center">
                            <div class="p-2 lg:p-3 bg-purple-500 rounded-lg">
                                <svg class="w-4 h-4 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                </svg>
                            </div>
                            <div class="ml-3 lg:ml-4">
                                <h3 class="text-xs lg:text-sm font-medium text-gray-500">PHP Sites</h3>
                                <p class="text-lg lg:text-2xl font-semibold text-gray-900" id="php-sites"><%= sites.filter(site => site.type === 'PHP' || site.type === 'CMS').length %></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 lg:p-6">
                        <div class="flex items-center">
                            <div class="p-2 lg:p-3 bg-yellow-500 rounded-lg">
                                <svg class="w-4 h-4 lg:w-6 lg:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </div>
                            <div class="ml-3 lg:ml-4">
                                <h3 class="text-xs lg:text-sm font-medium text-gray-500">JavaScript Sites</h3>
                                <p class="text-lg lg:text-2xl font-semibold text-gray-900" id="nodejs-sites"><%= sites.filter(site => site.type === 'Node.js' || site.type === 'JavaScript' || site.type === 'React' || site.type === 'Vue.js').length %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sites Table -->
                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                    <div class="px-4 lg:px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Hosted Sites</h3>
                    </div>
                    
                    <!-- Mobile Card Layout (visible on small screens) -->
                    <div class="block lg:hidden" id="mobile-sites">
                        <% sites.forEach(function(site) { %>
                        <div class="border-b border-gray-200 p-4 site-row" 
                             data-domain="<%= site.domain %>" 
                             data-type="<%= site.type %>" 
                             data-framework="<%= site.framework || '' %>"
                             data-ssl="<%= site.ssl %>">
                            <div class="flex items-start justify-between">
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center mb-2">
                                        <div class="flex-shrink-0 h-8 w-8">
                                            <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                                                <span class="text-sm font-medium text-blue-600"><%= site.domain.charAt(0).toUpperCase() %></span>
                                            </div>
                                        </div>
                                        <div class="ml-3 flex-1 min-w-0">
                                            <div class="text-sm font-medium text-gray-900 truncate"><%= site.domain %></div>
                                            <div class="text-xs text-gray-500">User: <%= site.user %></div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex flex-wrap gap-2 mb-2">
                                        <span class="px-2 py-1 text-xs leading-4 font-semibold rounded-full 
                                            <% if (site.type === 'CMS') { %>bg-blue-100 text-blue-800<% } 
                                               else if (site.type === 'PHP') { %>bg-purple-100 text-purple-800<% } 
                                               else if (site.type === 'Node.js') { %>bg-green-100 text-green-800<% } 
                                               else if (site.type === 'JavaScript') { %>bg-yellow-100 text-yellow-800<% } 
                                               else if (site.type === 'React') { %>bg-cyan-100 text-cyan-800<% } 
                                               else if (site.type === 'Vue.js') { %>bg-emerald-100 text-emerald-800<% } 
                                               else if (site.type === 'Python') { %>bg-indigo-100 text-indigo-800<% } 
                                               else if (site.type === 'Ruby') { %>bg-rose-100 text-rose-800<% } 
                                               else if (site.type === 'Go') { %>bg-teal-100 text-teal-800<% } 
                                               else if (site.type === 'Rust') { %>bg-orange-100 text-orange-800<% } 
                                               else if (site.type === 'Static') { %>bg-slate-100 text-slate-800<% } 
                                               else { %>bg-gray-100 text-gray-800<% } %>">
                                            <%= site.type %>
                                        </span>
                                        
                                        <% if (site.framework) { %>
                                            <span class="px-2 py-1 text-xs leading-4 font-semibold rounded-full 
                                                <% if (site.framework === 'Laravel') { %>bg-red-100 text-red-800<% } 
                                                   else if (site.framework === 'WordPress') { %>bg-blue-100 text-blue-800<% } 
                                                   else if (site.framework === 'Express') { %>bg-green-100 text-green-800<% } 
                                                   else if (site.framework === 'Next.js') { %>bg-gray-100 text-gray-800<% } 
                                                   else if (site.framework === 'React') { %>bg-cyan-100 text-cyan-800<% } 
                                                   else if (site.framework === 'Vue.js') { %>bg-emerald-100 text-emerald-800<% } 
                                                   else if (site.framework === 'Django') { %>bg-green-100 text-green-800<% } 
                                                   else if (site.framework === 'Flask') { %>bg-blue-100 text-blue-800<% } 
                                                   else { %>bg-gray-100 text-gray-800<% } %>">
                                                <%= site.framework %>
                                            </span>
                                        <% } %>
                                        
                                        <% if (site.ssl) { %>
                                            <span class="px-2 py-1 text-xs leading-4 font-semibold rounded-full bg-green-100 text-green-800">
                                                SSL
                                            </span>
                                        <% } else { %>
                                            <span class="px-2 py-1 text-xs leading-4 font-semibold rounded-full bg-red-100 text-red-800">
                                                No SSL
                                            </span>
                                        <% } %>
                                    </div>
                                    
                                    <div class="text-xs text-gray-500">
                                        Size: <%= formatFileSize(site.size) %> â€¢ Modified: <%= new Date(site.modified).toLocaleDateString() %>
                                    </div>
                                </div>
                                
                                <div class="flex space-x-2 ml-3">
                                    <a href="http://<%= site.domain %>" target="_blank" class="text-blue-600 hover:text-blue-900 transition-colors duration-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </a>
                                    <button onclick="showSiteDetails('<%= site.domain %>')" class="text-green-600 hover:text-green-900 transition-colors duration-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                    </button>
                                    <button onclick="manageSite('<%= site.domain %>')" class="text-gray-600 hover:text-gray-900 transition-colors duration-200">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                        
                        <% if (sites.length === 0) { %>
                        <div class="text-center py-12">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">No sites found</h3>
                            <p class="mt-1 text-sm text-gray-500">No hosted sites were found in the /home directory.</p>
                        </div>
                        <% } %>
                    </div>
                    
                    <!-- Desktop Table Layout (hidden on small screens) -->
                    <div class="hidden lg:block overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200" id="sites-table">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Domain</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Framework</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SSL</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Size</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Modified</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200" id="sites-tbody">
                                <% sites.forEach(function(site) { %>
                                <tr class="hover:bg-gray-50 site-row" 
                                    data-domain="<%= site.domain %>" 
                                    data-type="<%= site.type %>" 
                                    data-framework="<%= site.framework || '' %>"
                                    data-ssl="<%= site.ssl %>">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-8 w-8">
                                                <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                                                    <span class="text-sm font-medium text-blue-600"><%= site.domain.charAt(0).toUpperCase() %></span>
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900"><%= site.domain %></div>
                                                <div class="text-sm text-gray-500"><%= site.path %></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                            <%= site.user %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            <% if (site.type === 'CMS') { %>bg-blue-100 text-blue-800<% } 
                                               else if (site.type === 'PHP') { %>bg-purple-100 text-purple-800<% } 
                                               else if (site.type === 'Node.js') { %>bg-green-100 text-green-800<% } 
                                               else if (site.type === 'JavaScript') { %>bg-yellow-100 text-yellow-800<% } 
                                               else if (site.type === 'React') { %>bg-cyan-100 text-cyan-800<% } 
                                               else if (site.type === 'Vue.js') { %>bg-emerald-100 text-emerald-800<% } 
                                               else if (site.type === 'Python') { %>bg-indigo-100 text-indigo-800<% } 
                                               else if (site.type === 'Ruby') { %>bg-rose-100 text-rose-800<% } 
                                               else if (site.type === 'Go') { %>bg-teal-100 text-teal-800<% } 
                                               else if (site.type === 'Rust') { %>bg-orange-100 text-orange-800<% } 
                                               else if (site.type === 'Static') { %>bg-slate-100 text-slate-800<% } 
                                               else { %>bg-gray-100 text-gray-800<% } %>">
                                            <%= site.type %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (site.framework) { %>
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                <% if (site.framework === 'Laravel') { %>bg-red-100 text-red-800<% } 
                                                   else if (site.framework === 'WordPress') { %>bg-blue-100 text-blue-800<% } 
                                                   else if (site.framework === 'Express') { %>bg-green-100 text-green-800<% } 
                                                   else if (site.framework === 'Next.js') { %>bg-gray-100 text-gray-800<% } 
                                                   else if (site.framework === 'React') { %>bg-cyan-100 text-cyan-800<% } 
                                                   else if (site.framework === 'Vue.js') { %>bg-emerald-100 text-emerald-800<% } 
                                                   else if (site.framework === 'Django') { %>bg-green-100 text-green-800<% } 
                                                   else if (site.framework === 'Flask') { %>bg-blue-100 text-blue-800<% } 
                                                   else { %>bg-gray-100 text-gray-800<% } %>">
                                                <%= site.framework %>
                                            </span>
                                        <% } else { %>
                                            <span class="px-2 inline-flex text-xs leading-5 font-medium rounded-full bg-gray-50 text-gray-500">
                                                -
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if (site.ssl) { %>
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                                                </svg>
                                                Enabled
                                            </span>
                                        <% } else { %>
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                                                </svg>
                                                Disabled
                                            </span>
                                        <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= formatFileSize(site.size) %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= new Date(site.modified).toLocaleDateString() %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex space-x-2">
                                            <a href="http://<%= site.domain %>" target="_blank" class="text-blue-600 hover:text-blue-900 transition-colors duration-200">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                                </svg>
                                            </a>
                                            <button onclick="showSiteDetails('<%= site.domain %>')" class="text-green-600 hover:text-green-900 transition-colors duration-200">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                            </button>
                                            <button onclick="manageSite('<%= site.domain %>')" class="text-gray-600 hover:text-gray-900 transition-colors duration-200">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        
                        <% if (sites.length === 0) { %>
                        <div class="text-center py-12">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-900">No sites found</h3>
                            <p class="mt-1 text-sm text-gray-500">No hosted sites were found in the /home directory.</p>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Helper function to format file size
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Filter sites based on search and filters
        function filterSites() {
            const searchTerm = document.getElementById('search-input').value.toLowerCase();
            const typeFilter = document.getElementById('type-filter').value;
            const frameworkFilter = document.getElementById('framework-filter').value;
            const sslFilter = document.getElementById('ssl-filter').value;
            const rows = document.querySelectorAll('.site-row');
            
            let visibleCount = 0;
            
            rows.forEach(row => {
                const domain = row.dataset.domain.toLowerCase();
                const type = row.dataset.type;
                const framework = row.dataset.framework;
                const ssl = row.dataset.ssl;
                
                const matchesSearch = domain.includes(searchTerm);
                const matchesType = !typeFilter || type === typeFilter;
                const matchesFramework = !frameworkFilter || framework === frameworkFilter;
                const matchesSSL = !sslFilter || ssl === sslFilter;
                
                if (matchesSearch && matchesType && matchesFramework && matchesSSL) {
                    row.style.display = '';
                    visibleCount++;
                } else {
                    row.style.display = 'none';
                }
            });
            
            // Update total count
            document.getElementById('total-sites').textContent = visibleCount;
        }

        // Refresh sites list
        function refreshSites() {
            window.location.reload();
        }

        // Show site details (placeholder)
        function showSiteDetails(domain) {
            alert(`Showing details for: ${domain}\n\nThis feature will open a detailed view of the site configuration and statistics.`);
        }

        // Manage site (placeholder)
        function manageSite(domain) {
            alert(`Managing site: ${domain}\n\nThis feature will open site management options like SSL configuration, database settings, etc.`);
        }

        console.log('Site Lists page loaded successfully');
    </script>
</body>
</html>
